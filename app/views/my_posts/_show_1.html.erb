<%= render partial: 'partials/personal_center_head' %>
<div class="container">
  <ol class="breadcrumb">
    <li><a href="#">个人中心</a></li>
    <li><a href="#">我的寻车</a></li>
    <li class="active">查看报价</li>
  </ol>
</div>
<div class="container">
  <div class="row">
    <div class="col-md-9 mainBox">
      <div class="panel panel-default contentBox">
        <div class="panel-heading lineTitle">
          <h3 class="panel-title">查看报价</h3>
        </div>
        <div class="panel-body">
          <div class="sourceDetail">
            <div class="row">
              <div class="col-md-6 con">
                <h5 class="name"><%= @post.need_title %></h5>
                <div class="info">
                  <p><%= @post.app_area %></p>
                  <p><%= @post.color %></p>
                  <p>车辆所在区域要求：<%= @post.car_in_area %></p>
                  <p>提车时间：<%= Post::TAKE_DATES[@post.take_car_date] %></p>
                </div>
              </div>
              <div class="col-md-6 con">
                <div class="info">
                  <p class="price">期望的成交价：<span class="num"><%= @post.show_price %></span></p>
                  <p>指导价：<%= @post.base_car_base_price.to_f %>万/<%= @post.human_discount %></p>
                  <div class="reportLink"><a href="#myReport" data-toggle="modal" data-target="#myReport">我要举报</a></div>
                </div>
              </div>
            </div>
            <div class="row remark">
              <div class="tt bfL">备注：</div>
              <div class="info"><%= @post.remark %></div>
            </div>
          </div>
          <div class="sourceTab">
            <table width="100%" border="0" cellspacing="0" cellpadding="0" class="table table-striped">
              <thead>
                <tr>
                  <th width="40%">报价方</th>
                  <th width="40%">报价(万元)</th>
                  <th width="10%">发布时间</th>
                  <th width="10%">操作</th>
                </tr>
              </thead>
              <tbody>
                <%- @post.tenders.each do |tender| %>
                  <tr>
                    <td><%= link_to tender.user_name, his_tender_post_path(@post, tender_id: tender.id) %></td>
                    <td><span class="num"><%= tender.price.to_f %></span></td>
                    <td><%= tender.publish_time %></td>
                    <td><a href="javascript:;" class="del">删除</a></td>
                  </tr>
                <% end %>
              </tbody>
            </table>
          </div>
          <div class="pageList">
            <%=  %>
          </div>
        </div>
      </div>
    </div>
    <div class="col-md-3 mainRight">
      <%= render partial: 'partials/right_search' %>
    </div>
  </div>
</div>
<%= render partial: 'partials/complaint', locals: {resource_type: 'post', resource_id: @post.id} %>
