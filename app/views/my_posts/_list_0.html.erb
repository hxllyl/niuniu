<div class="container">
  <ol class="breadcrumb">
    <li><%= link_to '首页', root_path%></li>
    <li class="active">我的资源</li>
  </ol>
</div>
<div class="container">
  <div class="row">
    <div class="col-md-9 mainBox">
      <div class="panel panel-default contentBox">
        <div class="panel-heading lineTitle">
          <h3 class="panel-title">我的资源</h3>
        </div>
        <div class="panel-body">
          <div class="mySourceOpe clearfix">
            <div class="bfL">
              <a class="btn btn-default orange mr14" href="<%= new_user_my_post_path(current_user, _type: 0) %>" role="button">添加资源</a>
              <div class="btn-group">
                <%= select_tag 'brand', options_for_select(all_brand, @brand_id), class: 'form-control', prompt: '筛选品牌' %>
              </div>
            </div>
            <div class="bfR">
              <div class="updateTime mr20 bfL">最后更新时间：<span><%= @posts.first.publish_time %></span></div>
              <button class="btn btn-default bfR" type="button"><span class="icon icon-refresh"></span>全部更新</button>
            </div>
          </div>
          <div class="mySourceTab mt10">
            <table width="100%" border="0" cellspacing="0" cellpadding="0" class="table table-striped">
              <tbody>
                <%- @posts.each do |post| %>
                  <tr>
                    <td>
                      <div class="box clearfix">
                        <div class="infoM">
                          <h5 class="name"><%= link_to post.portal_resource_title, user_my_post_path(current_user, post) %></h5>
                          <div class="info clearfix">
                            <div class="m"><%= post.standard_type %></div>
                            <div class="m"><%= post.color %></div>
                          </div>
                        </div>
                        <div class="infoPrice">
                          <p><span class="price"><i class="icon icon-money"></i><%= post.expect_price.to_f %>万</span><span class="time"><%= post.publish_time %></span></p>
                          <p>指导价：<%= post.guiding_price.to_s << '/' << post.human_discount %></p>
                        </div>
                      </div>
                      <div class="remark clearfix">
                        <div class="tt bfL">备注：</div>
                        <div class="info"><%= post.remark %></div>
                      </div>
                      <div class="btnGroups">
                        <a class="btn btn-default btn-xs" href="#" role="button">编辑</a>
                        <a class="btn btn-default btn-xs upBtn" href="javascript:;" role="button">上移</a>
                        <a class="btn btn-default btn-xs downBtn" href="javascript:;" role="button">下移</a>
                        <a class="btn btn-default btn-xs" href="#" role="button">删除</a>
                      </div>
                  </td>
                </tr>
                <% end %>
              </tbody>
            </table>
          </div>
          <div class="pageList">
            <%= paginate @posts %>
          </div>
        </div>
      </div>
    </div>
    <div class="col-md-3 mainRight">
      <%= render partial: 'partials/right_mine', locals: {hidden_button: false} %>
      <%= render partial: 'partials/right_search' %>
    </div>
  </div>
</div>
<%= javascript_tag do %>
$(".mySourceTab .table").find("tr").hover(function(){
  $(this).find(".btnGroups").show();
},function(){
  $(this).find(".btnGroups").hide();
});

var trLength = $(".btnGroups").find(".downBtn").length;
$(".btnGroups").find(".upBtn").each(function(){
  $(this).click(function(){
    var $tr = $(this).parents("tr");
    if ($tr.index() != 0){
      $tr.prev().before($tr);
    }
  });
});
$(".btnGroups").find(".downBtn").each(function(){
  $(this).click(function(){
    var $tr = $(this).parents("tr");
    if ($tr.index() != trLength - 1){
      $tr.next().after($tr);
    }
  });
});
<% end -%>
