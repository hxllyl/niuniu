<div role="tabpanel" class="panel panel-default contentBox">
	<ul role="tablist" class="nav nav-tabs carInfoTabs">

		<li role="presentation" class="active"><a href="#allCarInfo"><%= t('post_info') %></a></li>
    <% @hot_brands.each_with_index do |brand, i| %>
		  <li role="presentation"><a href="#carBrand<%= i + 1%>"><span class="icon"><%= image_tag(brand.car_photo.try(:image).try(:thumb), alt: "")%></span><%= brand.name %></a></li>
	  <% end-%>

  </ul>

	<div class="panel-body">
		<div role="tabpanel" class="tab-pane active" id="allCarInfo">
			<ul class="carInfoList clearfix">
        <%- @posts.each do |post| %>
				<li>
					<div class="logo bfL"><%= image_tag(post.brand.car_photo.try(:image).try(:thumb), alt: "")  %></div>
					<div class="info">
						<h5 class="tt"><a href="#"><%= post_name(post) %></a></h5>
						<p class="clearfix"><span class="bfL"></span><%= post.color %><span class="bfR"><%= [post.owner_detail, human_time(post.updated_at)].join %></span></p>

					</div>
				</li>
				<% end -%>
			</ul>
		</div>


