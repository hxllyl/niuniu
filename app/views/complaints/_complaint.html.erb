<div class="modal box bs-example-modal-sm" id="myReport" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-sm">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title lineTitle" id="">举报</h4>
      </div>
      <%= form_for Complaint.new, as: :complaint, url: complaints_path, method: :post do |f|%>
      <%= f.hidden_field :resource_id, value: @post.user.id, id: 'resource_id' -%>
      <%= f.hidden_field :user_id, value: current_user.id -%>
      <div class="modal-body">
        <div class="form-group row">
          <div class="radio-inline col-md-6">
            <label>
              <%= f.radio_button 'resource_type', 'User', checked: true, class: 'complaint_redio', data_id: @post.user.id %>举报用户
            </label>
          </div>
          <div class="radio-inline col-md-6">
            <label>
              <%= f.radio_button 'resource_type', 'Post', class: 'complaint_redio', data_id: @post.id  %>举报车源
            </label>
          </div>
        </div>
        <div class="form-group row">
          <div class="radio-inline col-md-6">
            <label>
              <%= f.radio_button 'resource_type', 'Post', class: 'complaint_redio', data_id: @post.id %>举报寻车信息
            </label>
          </div>
        </div>
        <div class="form-group">
          <%= f.text_area :content, class: "form-control", rows: "3", placeholder: "输入详细内容" %>
        </div>
      </div>
      
      <div class="modal-footer">
        <%= f.submit '提交', class: 'btn btn-default w100p orange btn_spacing complaint_commit', 'data-dismiss'=> 'modal', 'aria-label' => 'Close' -%>
      </div>
      <% end -%>
    </div>
  </div>
</div>