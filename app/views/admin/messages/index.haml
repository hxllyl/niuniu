.wrapper.wrapper-content.animated.fadeInRight
  .ibox.float-e-margins
    .ibox-content
      %table.table.table-striped
        %tr
          %th ID
          %th 标题
          %th 发送人
          %th 接收者
          %th 接收组
          %th 状态
          %th 发送时间
          %th 操作
        - @messages.each do |item|
          %tr
            %td= item.id
            %td= item.title
            %td= item.sender.name
            %td= item.receiver.try(:name)
            %td= t("message.receiver_group.#{item.receiver_group}") if item.receiver_group
            %td= Message::STATUS[item.status]
            %td= item.created_at.to_s(:db)
            %td
              = link_to '删除', admin_message_path(item), method: :delete, data: { confirm: '确认删除？' }
              &nbsp;&nbsp;
              -# TODO: 是否有重发？貌似没有
              -# = link_to '重发', '#'

      - if @messages.present?
        .hr-line-dashed

      .text-center
        = paginate @messages