.row.wrapper.border-bottom.white-bg.page-heading
  .col-lg-9
    %h2 已联系未注册名录

.wrapper.wrapper-content.animated.fadeInRight

  .ibox.float-e-margins
    .ibox-content
      .row
        .col-lg-12
          %table.table.table-striped
            %tr
              %th 序号
              %th 业务员工号
              %th 手机号
              %th 首次联系时间
              - if admin? || super_admin?
                %th 操作
            - @mobiles.each do |ele|
              %tr
                %td= ele.id
                %td= ele.sender.job_number
                %td= ele.mobile
                %td= ele.created_at.strftime("%Y-%m-%d %H:%M")
                - if admin? || super_admin?
                  %td= link_to '代注册', new_admin_user_path('user[mobile]' => ele.mobile, 'user[customer_service_id]' => ele.sender.id)
        .col-lg-6
          %table.table.table-responsive
            %tr
              %th 总数量
              %td{ colspan: 3 } 10000
            %tr
              %th{ style: 'width: 100px;'} 今日新增数
              %td 50
              %th{ style: 'width: 100px;'} 今日注册数
              %td 100
            %tr
              %th 本月新增数
              %td 50
              %th 本月注册数
              %td 100
            %tr
              %th 累计新增数
              %td 50
              %th 累计注册数
              %td 100

        .col-lg-12
          - if @mobiles.present?
            .hr-line-dashed

          .text-center
            = paginate @mobiles
