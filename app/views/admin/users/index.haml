.row.wrapper.border-bottom.white-bg.page-heading
  .col-lg-9
    %h2 用户列表

.wrapper.wrapper-content.animated.fadeInRight

  .ibox.float-e-margins
    .ibox-content
      .row
        .col-lg-12
          %table.table.table-striped
            %tr
              %th 序号
              %th 业务员工号
              %th 姓名
              %th 联系电话
              %th{ style: 'width: 120px;'} 公司名称
              %th 认证等级
              %th 注册日期
              %th 近一月累计成交
              %th 累计成交
              %th 操作
            - @users.each do |user|
              %tr
                %td= user.id
                %td= user.customer_service.try(:job_number)
                %td
                  = link_to user.name, user_list_posts_path(user_id: user.id, _type: 0), target: '_blank'
                %td= user.mobile
                %td= user.company
                %td= User::LEVELS[user.level]
                %td= user.created_at.to_s(:db)
                / %td= ele.user.last_sign_in_at.try(:to_s, :db)
                %td= user.last_month_dealt
                %td= user.sum_dealt
                %td
                  = link_to '修改', edit_admin_user_path(user)

        .col-lg-12
          - if @users.present?
            .hr-line-dashed

          .text-center
            = paginate @users
