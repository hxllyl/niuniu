= form_for(@user, url: url) do |f|
  .form-group
    = f.label '姓名'
    = f.text_field :name
  .form-group
    = f.label '手机号'
    = f.text_field :mobile
  .form-group
    = f.label '密码'
    = f.password_field :password
  .form-group
    = f.label '注册地'
    = select_tag 'province', options_for_select(areas(level: :provinces)), id: 'province', prompt: '请选择省份'
    = f.select :area_id, options_for_select([[@user.area.name, @user.area.id]], selected: @user.area_id), {prompt: '请选择城市'}, {id: 'city'}
  .form-group
    = f.label '公司'
    = f.text_field :company

  = f.fields_for :contact do |c_f|
    .form-group
      = c_f.label '公司地址'
      = c_f.text_field :company_address, value: @user.contact['company_address']
    .form-group
      = c_f.label '职业'
      = c_f.text_field :position_header, value: @user.contact['position_header']
    .form-group
      = c_f.label '微信'
      = c_f.text_field :wx, value: @user.contact['wx']
      .form-group
      = c_f.label 'QQ'
      = c_f.text_field :qq, value: @user.contact['qq']
    .form-group
      = c_f.label '自我简介'
      = c_f.text_field :self_introduction, value: @user.contact['self_introduction']

  = f.hidden_field :reg_status, value: '3'
  = f.hidden_field :customer_service_id
  = f.hidden_field :role, value: 'normal'
  = f.hidden_field :status, value: 1
  .form-group
    = f.submit

= javascript_include_tag "edit_user"
