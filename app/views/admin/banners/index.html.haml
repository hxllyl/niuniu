.row.wrapper.border-bottom.white-bg.page-heading
  .col-lg-9
    %h2
      banners
      = link_to '创建新的Banner', new_admin_banner_path, class: 'btn btn-sm btn-primary'

  .wrapper.wrapper-content.animated.fadeInRight
  .ibox.float-e-margins
    .ibox-content
      %table.table.table-striped
        %tr
          %th ID
          %th 标题
          %th 位置
          %th 操作
        - @banners.each do |item|
          %tr
            %td= item.id
            %td= item.title
            %td= item.poi
            %td
              = link_to '删除', admin_banner_path(item), method: :delete, data: { confirm: '确认删除？' }
              &nbsp;&nbsp;

      - if @banners.present?
        .hr-line-dashed

      .text-center
        = paginate @banners