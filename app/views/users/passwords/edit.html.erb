<div class="container accountsSetting">
  <div class="row">
    <div class="col-md-2 accountsMenu">
      <h5 class="title"><span class="tt">帐号管理</span></h5>
      <ul class="list">
        <li><a href="#"><span class="icon icon-userInfo"></span>个人信息</a></li>
        <li><a href="#"><span class="icon icon-level"></span>认证等级</a></li>
        <li class="active"><a href="#"><span class="icon icon-pw"></span>修改密码</a></li>
        <li><a href="#"><span class="icon icon-logo"></span>关于我们</a></li>
        <li><a href="#"><span class="icon icon-quit"></span>安全退出</a></li>
      </ul>
    </div>
    <div class="col-md-10 accountsMain">
      <h5 class="title">修改密码</h5>
      <div class="panel-body passwordForm">
        <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
          <div class="form-group clearfix">
            <%= f.label :current_password, "原密码：", class: "col-sm-2 control-label" %>
            <div class="col-sm-6 prl0">
              <%= f.password_field :current_password, autofocus: true, autocomplete: "off", class: "form-control" %>
            </div>
            <div class="col-sm-4 tips"><a href="#">忘记密码</a></div>
          </div>
          <div class="form-group clearfix">
            <%= f.label :password, "新密码：", class: "col-sm-2 control-label" %>
            <div class="col-sm-6 prl0">
              <%= f.password_field :password, autofocus: true, autocomplete: "off", class: "form-control" %>
            </div>
            <div class="col-sm-4 tips"></div>
          </div>
          <div class="form-group clearfix">
            <%= f.label :password_confirmation, "重复密码：", class: "col-sm-2 control-label" %>
            <div class="col-sm-6 prl0">
              <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control" %>
            </div>
            <div class="col-sm-4 tips"></div>
          </div>
          <div class="form-group clearfix">
            <div class="col-sm-8 txtC">
              <%= f.submit "确认", class: "btn btn-default orange" %>
              <input type="reset" class="btn btn-default" value="放弃" />
            </div>
            <div class="col-sm-4 tips"></div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>



