<% ['license'].each do |type| %>
  <li class="col-md-3">
    <div class="thumbnail box">
      <h5 class="tt"><%= t(type)%></h5>
      <div class="img photo"><span class="alt">照片示例</span>
      <%= image_tag(current_user.send("#{type}"), alt: "", width: "100%", class: 'show-img') if current_user.send("#{type}") %>
      </div>
      <div class="fileInput">
        <div class="fileBtn">添加照片
          <%= file_field_tag "#{type}[_image]", value: current_user.photos.find_by(_type: type).try(:image_file), type: :file, multiple: true, class: 'button', accept: 'image/png,image/gif,image/jpeg, image/jpg'  %>
          <%= hidden_field_tag "#{type}[_type]", "#{type}" %>
        </div>
      </div>
    </div>
  </li>
<% end -%>