<% sub_comms.each_with_index do |c, i| %>
  <% if i == comm_counts + 1 %>
    <li class="last">
      <div class="photo bfL"><a href="#"><%= image_tag(c.user.avatar, alt: "", size: '45x45')%></a></div>
      <div class="detail">
        <div class="info"><span class="name"><a href="#"><%= c.user_name%>：</a></span><%= c.content %></div>
        <div class="time"><a href="#new_comment" class="icon icon-message"></a><%= human_time(c.updated_at) %></div>
      </div>
    </li>
  <% else %>
    <li>
      <div class="photo bfL"><a href="#"><%= image_tag(c.user.avatar, alt: "", size: '45x45')%></a></div>
      <div class="detail">
        <div class="info"><span class="name"><a href="#"><%= c.user_name%>：</a></span><%= c.content %></div>
        <div class="time"><a href="#new_comment" class="icon icon-message" data-name="<%= c.user_name %>" data-parent-id="<%= c.id %>"></a><%= human_time(c.updated_at) %></div>
      </div>
    </li>
  <% end -%>
  
<%end-%>
