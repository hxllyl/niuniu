<div class="container">
  <ol class="breadcrumb">
    <li><a href="#">首页</a></li>
    <li class="active">品牌筛选</li>
  </ol>
</div>
<div class="container">
  <div class="row">
    <div class="col-md-9 mainBox">
      <div role="tabpanel" class="panel panel-default contentBox">
        <div class="panel-heading lineTitle">
          <ul class="selectCrumb clearfix">
            <li><%= @brand.name %><span class="close" aria-label="Close">&times;</span></li>
          </ul>
        </div>
        <div class="panel-body">

          <% @standards.each do |std| %>
            <div class="carList clearfix">
              <div class="tt"><%= std.name %></div>
              <% std.car_models.with_brand(@brand).each do |car_model|%>
                <ul class="list">
                  <li><a href="#"><%= car_model.name %></a></li>
                </ul>
              <% end %>
            </div>
          <% end %>
        </div>
      </div>
      <div class="panel panel-default contentBox">
        <div class="panel-heading lineTitle">
          <h3 class="panel-title">全部资源（<%= @resources.count %>）</h3>
        </div>
        <div class="panel-body">
          <div class="mySourceOpe">
            <div class="btn-group">
              <select name="" class="form-control">
                <option value="排序方式">排序方式</option>
                <option value="排序方式1">排序方式1</option>
                <option value="排序方式2">排序方式2</option>
              </select>
            </div>
          </div>
          <div class="mySourceTab mt10">
            <table width="100%" border="0" cellspacing="0" cellpadding="0" class="table table-striped">
              <tbody>
              <% @resources.each do |post| %>
                <tr>
                  <td>

                    <div class="box clearfix">
                      <div class="infoM">
                        <h5 class="name"><a href="#"><%= post.base_car_to_human_name %></a></h5>
                        <div class="info clearfix">
                          <div class="m">中规/现车</div>
                          <div class="m"><%= post.outer_color %></div>
                          <div class="m"><span class="tag"><%= image_tag("user/typeIcon_p.png", alt: "", width: "100%")%></span><span><a href="#">李木子(上海)</a></span><span class="statu"><%=following?(post.user)%></span></div>
                        </div>
                      </div>
                      <div class="infoPrice">
                        <p><span class="price"><i class="icon icon-money"></i><%= post.get_expect_price %>万</span><span class="time"><%= post.publish_time %></span></p>
                        <p>指导价：<%= post.guiding_price.to_f%>万/下2万</p>
                      </div>
                    </div>
                    <div class="remark clearfix">
                      <div class="tt bfL">备注：</div>
                      <div class="info"><%= post.remark %></div>
                    </div>
                  </td>
                </tr>
              <% end %>
              </tbody>
            </table>
          </div>
          <div class="pageList">
          </div>
        </div>
      </div>
    </div>
    <div class="col-md-3 mainRight">
      <div class="panel panel-default contentBox bgf8">
        <div class="panel-body indexUser">
          <div class="userInfo clearfix">
            <div class="photo bfL"><a href="#"><%= image_tag("index/user_photo.jpg", alt: "")%></a></div>
            <div class="name">
              <h5><a href="#">李木子(上海)</a></h5>
              <div class="clearfix"><span class="tag"><%= image_tag("user/typeIcon_p.png", alt: "", width: "100%")%></span></div>
            </div>
          </div>
          <ul class="row userData">
            <li class="col-md-4">
              <a href="#">
                <p class="data">8888</p>
                <p class="tt">我的寻车</p>
              </a>
            </li>
            <li class="col-md-4">
              <a href="#">
                <p class="data">8888</p>
                <p class="tt">我的报价</p>
              </a>
            </li>
            <li class="col-md-4 last">
              <a href="#">
                <p class="data">8888</p>
                <p class="tt">我的关注</p>
              </a>
            </li>
          </ul>
          <div class="userSubBtn">
            <button type="button" class="btn btn-default btn-block red"><span class="icon icon-search"></span>发布寻车</button>
            <button type="button" class="btn btn-default btn-block blue"><span class="glyphicon glyphicon-plus"></span>发布资源</button>
          </div>
          <div class="userArr"><span class="icon icon-user"></span></div>
        </div>
      </div>
      <div class="panel panel-default contentBox">
        <div class="panel-heading lineTitle">
          <h3 class="panel-title">一键找车</h3>
        </div>
        <div class="panel-body">
          <form class="searchBox">
            <input type="text" class="form-control input pr50" placeholder="品牌 车型 款式 指导价 …" />
            <input type="submit" class="btn btn-primary subBtn" value="搜索" />
          </form>
        </div>
      </div>
      <div class="panel panel-default contentBox">
        <div class="panel-heading lineTitle">
          <h3 class="panel-title">品牌筛选</h3>
        </div>
        <div class="panel-body brandSelect">
          <div class="dropdown w100p">
            <select name="" class="form-control">
              <option value="品牌1">品牌1</option>
              <option value="品牌2">品牌2</option>
              <option value="品牌3">品牌3</option>
            </select>
          </div>
          <input type="submit" class="btn btn-primary subBtn" value="提交">
        </div>
      </div>
      <div class="panel panel-default contentBox">
        <div class="panel-heading lineTitle">
          <h3 class="panel-title">最近浏览过的车源</h3>
        </div>
        <div class="panel-body">
          <ul class="carSourceHis">
            <li class="first">
              <h5 class="name"><a href="#">路虎揽胜运动 3345</a></h5>
              <div class="info clearfix"><span class="price bfL">37.68万</span><span class="bfR">中规/现车</span></div>
              <div class="info clearfix"><span class="bfL">黑/白</span><span class="bfR">16:30</span></div>
            </li>
            <li>
              <h5 class="name"><a href="#">路虎揽胜运动 3345</a></h5>
              <div class="info clearfix"><span class="price bfL">37.68万</span><span class="bfR">中规/现车</span></div>
              <div class="info clearfix"><span class="bfL">黑/白</span><span class="bfR">16:30</span></div>
            </li>
            <li>
              <h5 class="name"><a href="#">路虎揽胜运动 3345</a></h5>
              <div class="info clearfix"><span class="price bfL">37.68万</span><span class="bfR">中规/现车</span></div>
              <div class="info clearfix"><span class="bfL">黑/白</span><span class="bfR">16:30</span></div>
            </li>
          </ul>
        </div>
      </div>
    </div>
  </div>
</div>
