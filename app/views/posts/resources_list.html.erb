<div class="container">
  <ol class="breadcrumb">
    <li><a href="#">首页</a></li>
    <li class="active">品牌筛选</li>
  </ol>
</div>
<div class="container">
  <div class="row">
    <div class="col-md-9 mainBox">
      <div role="tabpanel" class="panel panel-default contentBox">
        <div class="panel-heading lineTitle">
          <ul class="selectCrumb clearfix">
            <li><span class="name"><%= @rs.standard.try(:name) %></span><span class="close" aria-label="Close">&times;</span></li>
            <li><span class="name"><%= @rs.brand.try(:name) %></span><span class="close" aria-label="Close">&times;</span></li>
            <li><span class="name"><%= @rs.car_model.try(:name) %></span><span class="close" aria-label="Close">&times;</span></li>
            <li><span class="name"><%= @rs.car_model.try(:name) %></span><span class="close" aria-label="Close">&times;</span></li>
          </ul>
        </div>
        <div class="panel-body souSelList">
          <div class="carList clearfix">
            <div class="tt">规格</div>
            <div class="listBox">
              <ul class="list clearfix">
                <% @rs.all_standards.each do |std| %>
                    <li><a href=<%= resources_list_posts_path(standard_id: std.id) %>><%= std.name %></li>
                <% end %>
              </ul>
            </div>
          </div>
          <div class="carList clearfix">
            <div class="tt">品牌</div>
            <div class="listBox">
              <ul class="list clearfix">
                <% Array(@rs.standard.try(:brands)).each do |brand| %>
                    <li>
                      <a href=<%= resources_list_posts_path(brand_id: brand.id) %>>
                        <%= brand.name %>
                      </a>
                    </li>
                <% end %>
              </ul>
            </div>
          </div>
          <div class="carList clearfix">
            <div class="tt">车型</div>
            <div class="listBox">
              <ul class="list clearfix">
                <% @rs.brand.car_models.each do |car_model| %>
                    <li>
                      <a href=<%= resources_list_posts_path(car_model_id: car_model.id) %>>
                        <%= car_model.name %>
                      </a>
                    </li>
                <% end %>
              </ul>
            </div>
          </div>
          <div class="carList clearfix">
            <div class="tt">车款</div>
            <div class="listBox">
              <ul class="list clearfix">
                <% Array(@rs.styles).each do |style| %>
                    <li>
                      <a href=<%= resources_list_posts_path(base_car_id: style.id) %>>
                        <%= style.style %>
                      </a>
                    </li>
                <% end %>
              </ul>
            </div>
          </div>
          <div class="hideCarList hide">
            <div class="carList clearfix">
              <div class="tt">外观</div>
              <div class="listBox">
                <ul class="list clearfix">
                  <li><a href="#">外观</a></li>
                  <li><a href="#">外观</a></li>
                  <li><a href="#">外观</a></li>
                  <li><a href="#">外观</a></li>
                </ul>
              </div>
            </div>
            <div class="carList clearfix">
              <div class="tt">内饰</div>
              <div class="listBox">
                <ul class="list clearfix">
                  <li><a href="#">内饰</a></li>
                  <li><a href="#">内饰</a></li>
                  <li><a href="#">内饰</a></li>
                  <li><a href="#">内饰</a></li>
                </ul>
              </div>
            </div>
            <div class="carList clearfix">
              <div class="tt">车况</div>
              <div class="listBox">
                <ul class="list clearfix">
                  <li><a href="#">车况</a></li>
                  <li><a href="#">车况</a></li>
                  <li><a href="#">车况</a></li>
                  <li><a href="#">车况</a></li>
                </ul>
              </div>
            </div>
            <div class="carList clearfix">
              <div class="tt">地区</div>
              <div class="listBox">
                <ul class="list clearfix">
                  <li><a href="#">北京</a></li>
                  <li><a href="#">上海</a></li>
                  <li><a href="#">广州</a></li>
                </ul>
              </div>
            </div>
            <div class="carList clearfix">
              <div class="tt"></div>
              <div class="listBox"><input type="submit" class="btn btn-default btn_spacing" value="搜索"></div>
            </div>
          </div>
        </div>
      </div>
      <% if params[:base_car_id] %>
        <%= render partial: 'resources_list', locals: { resources: @resources } %>
      <% end %>
    </div>
    <div class="col-md-3 mainRight">
      <%- if current_user %>
          <%= render partial: 'partials/right_mine', locals: {hidden_button: false} %>
      <% else %>
          <%= render partial: 'partials/right_login' %>
      <% end %>
      <%= render 'partials/right_search' %>
      <%- if current_user %>
          <%= render 'partials/right_history_list' %>
      <% end %>
    </div>
  </div>
</div>
<script type="text/javascript">
$(document).ready(function () {
  var winUrl = window.location.search;
  $(".souSelList").find(".list > li >a").click(function () {
    //alert($.getUrlParam("brand_id"));
    $(this).addClass("current").siblings().removeClass("current");
  });

  $(".selectCrumb li .name").each(function(){
    if($(this).text()==""){
      $(this).parent().hide();
    }
  })
});

(function ($) {
  $.getUrlParam = function (name) {
    var reg = new RegExp("(^|&)" + name + "=([^&]*)(&|$)");
    var r = window.location.search.substr(1).match(reg);
    if (r != null) return unescape(r[2]);
    return null;
  }
})(jQuery);
</script>
