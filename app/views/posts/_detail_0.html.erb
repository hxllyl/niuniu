<div class="container">
  <ol class="breadcrumb">
    <li><a href="#">首页</a></li>
    <li class="active">资源详情</li>
  </ol>
</div>
<div class="container">
  <div class="row">
    <div class="col-md-9 mainBox">
      <div class="panel panel-default contentBox">
        <div class="panel-heading lineTitle">
          <h3 class="panel-title">资源详情</h3>
        </div>
        <div class="panel-body sourceDetail">
          <div class="row">
            <div class="col-md-6 con">
              <h5 class="name"><%= @post.portal_resource_title %></h5>
              <div class="info">
                <p><%= @post.standard_type %></p>
                <p><%= @post.color %></p>
                <p>更新时间：<%= @post.publish_time %></p>
              </div>
            </div>
            <div class="col-md-6 con">
              <div class="info">
                <p><span class="price"><i class="icon icon-money"></i><%= @post.expect_price %>万</span></p>
                <p>指导价：<%= @post.guiding_price.to_s << '/' << @post.human_discount %></p>
                <div class="reportLink"><a href="#" data-toggle="modal" data-target="#myReport">我要举报</a></div>
              </div>
            </div>
          </div>
          <div class="remark clearfix">
            <div class="tt bfL">备注：</div>
            <div class="info"><%= @post.remark %></div>
          </div>
          <ul class="sourceGallery">
            <%- @post.photos.each do |ele| %>
              <li><%= image_tag(ele.last)%></li>
            <% end %>
          </ul>
        </div>
      </div>
    </div>
    <div class="col-md-3 mainRight">
      <%= render partial: 'partials/right_user' %>
      <%- if current_user %>
        <%= render partial: 'partials/right_joint_followings' %>
      <% end %>
      <%= render partial: 'partials/right_his_resources' %>
      <%= render partial: 'partials/right_his_needs' %>
    </div>
  </div>
</div>
<% if current_user %>
  <%= render partial: 'complaints/complaint'%>
<% end -%>  

<%= content_for :footers do %>
  <%= javascript_include_tag 'posts', 'data-turbolinks-track' => true %>
<% end -%>
