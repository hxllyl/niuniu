
<div class="container userOverview">
  <div class="userInfo clearfix">
    <div class="photo bfL"><%= image_tag(current_user.avatar, alt: "", width: "108", height: "108")%></div>
    <div class="detail">
      <div class="clearfix"><span class="name"><%= current_user.name %></span><span class="type"><%= image_tag(current_user.level_icon, alt: "", width: "100%")%></span><a href="#" class="btn btn-default btn-xs"><span class="icon icon-upgrade"></span><%= t('upgrade') -%></a></div>
      <div class="detailTab">
        <table width="100%" border="0" cellspacing="0" cellpadding="0">
          <tr>
            <td colspan="2"><%= t('self_introduction') -%>：</td>
          </tr>
          <tr>
            <td colspan="2"><%= t('zc_place') -%>：<%= current_user.area.name %></td>
          </tr>
          <tr>
            <td colspan="2"><strong class="tip">最近三个月成交<%= current_user.dealeds(:mouth) %>台，累计成交<%= current_user.dealeds(:total)%>台</strong></td>
          </tr>
          <tr>
            <td width="250"><%= t('company') -%>：<%= current_user.company %></td>
            <td width="250"><%= t('position') -%>：<%= current_user.contact.try('position') %></td>
          </tr>
          <tr>
            <td><%= t('wei_xin')%>：<%= current_user.contact.try(:wx)%></td>
            <td>QQ：</td>
          </tr>
          <tr>
            <td colspan="2"><%= t('mobile') -%>：<span class="tip"><%= current_user.mobile %></span></td>
          </tr>
        </table>
      </div>
    </div>
  </div>
  <div class="userDataTag">
    <ul class="list clearfix">
      <li class="active">
        <a href="#">
          <p class="num"><%= current_user.posts.needs.count %></p>
          <p><%= t('i_posts')%></p>
        </a>
      </li>
      <li>
        <a href="#">
          <p class="num"><%= current_user.tenders.count %></p>
          <p><%= t('i_tenders')%></p>
        </a>
      </li>
      <li>
        <a href="#">
          <p class="num"><%= current_user.followings.count %></p>
          <p><%= t('i_followings') %></p>
        </a>
      </li>
    </ul>
    <div class="link"><a href="#"><%= t('sys_msgs') -%></a></div>
  </div>
  <a href="#" class="userArr"><span class="icon icon-edit"></span></a>
</div>
