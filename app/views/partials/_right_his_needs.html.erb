<div class="panel panel-default contentBox">
  <div class="panel-heading lineTitle">
    <h3 class="panel-title">他的寻车<a href="<%= user_list_posts_path(user_id: @someone.id, _type: 1) %>" class="more bfR">更多 >></a></h3>
  </div>
  <div class="panel-body">
    <ul class="carSourceHis">
      <%- @someone.posts.needs[0..2].each_with_index do |post, index| %>
        <li class=<%= "first" if index == 0 %>>
          <h5 class="name"><%= post.title %></h5>
          <div class="info clearfix"><span class="bfL mr20">卖<%= post.car_license_areas%></span><span class="bfL"><%= post.color %></span></div>
          <div class="info clearfix"><span class="bfL"><%= post.owner %></span><span class="bfR"><%= post.publish_time %></span></div>
          <%- if post.is_completed? %>
            <div class="seal seal_done_sm"></div>
          <% end %>
        </li>
      <% end %>
    </ul>
  </div>
</div>
