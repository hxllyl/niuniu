<% if current_user %>
<div class="panel panel-default contentBox bgf8">
	<div class="panel-body indexUser">
		<div class="userInfo clearfix">
			<div class="photo bfL"><a href="#"><%= image_tag current_user.avatar, size: '78x78', alt: "我的头像" -%></a></div>
			<div class="name">
				<%= link_to current_user.name + '(' + current_user.area.try(:name).to_s + ')', current_user %>
				<div class="clearfix"><span class="tag"><%= current_user.i_level %></span></div>
			</div>
		</div>
		<ul class="row userData">
			<li class="col-md-4">
				<a href="#">
					<p class="data"><%= current_user.posts_with_type(Post::TYPES.keys[1]).count %></p>
					<p class="tt"><%= I18n.t('i_post')%></p>
				</a>
			</li>
			<li class="col-md-4">
				<a href="#">
					<p class="data"><%= current_user.tenders.count %></p>
					<p class="tt"><%= I18n.t('i_tender') %></p>
				</a>
			</li>
			<li class="col-md-4 last">
				<a href="#">
					<p class="data"><%= current_user.followings.count %></p>
					<p class="tt"><%= I18n.t('i_following') %></p>
				</a>
			</li>
		</ul>
		<div class="userSubBtn">
			<button type="button" class="btn btn-default btn-block red"><span class="icon icon-search"></span><%= I18n.t('post') %></button>
			<button type="button" class="btn btn-default btn-block blue"><span class="glyphicon glyphicon-plus"></span><%= I18n.t('resource') %></button>
		</div>
		<div class="userArr"><span class="icon icon-user"></span></div>
	</div>
</div>
<% end %>

<% unless current_user %>
<div class="panel panel-default contentBox bgf8">
	<div class="panel-heading lineTitle">
		<h3 class="panel-title"><%= t('login') %></h3>
	</div>
  <%= form_for(User.new, as: :user, url: session_path(:user),
               html: {class: 'panel-body form-horizontal indexLogin'}) do |f| %>
		<div class="form-group">
			<%= f.text_field :mobile, class: "form-control input-sm", id: "", placeholder: "请输入手机号", value: cookies[:user_name] %>
		</div>
		<div class="form-group">
			<%= f.password_field :password, class: "form-control input-sm", id: "", placeholder: "请输入密码" %>
		</div>
		<div class="checkbox">
	    <label class="bfL">
	      <%= check_box_tag :remember_name %><%= t('remember_me')%>
	    </label>
	    <div class="forget bfR"><a href="#"><%= t('forget_pw') %></a></div>
	  </div>
	  <ul class="subGroup row">
	  	<li class="col-md-6">
	  		<input type="submit" class="btn btn-default w100p orange btn_spacing" value="登录" />
	  	</li>
	  	<li class="col-md-6">
	  		<button type="button" class="btn btn-default w100p btn_spacing" role="button" data-toggle="modal" data-target="#reg_step1"><%= t('register_but') %></button>
	  	</li>
	  </ul>
    <% end -%>
</div>
<% end -%>

