<div class="panel panel-default contentBox">
  <div class="panel-heading lineTitle">
    <h3 class="panel-title">最近浏览过的车源</h3>
  </div>
  <div class="panel-body">
    <ul class="carSourceHis">
      <%- current_user.later_view_posts.each_with_index do |post, index| %>
        <li class=<%= "first" if index == 0 %>>
          <h5 class="name"><%= link_to post.title, post_path(post, {_type: 0}) %></h5>
          <div class="info clearfix"><span class="price bfL"><%= post.show_price %></span><span class="bfR"><%= post.standard_type %></span></div>
          <div class="info clearfix"><span class="bfL"><%= post.color %></span><span class="bfR"><%= post.publish_time %></span></div>
        </li>
      <% end %>
    </ul>
  </div>
</div>
